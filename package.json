{
  "private": false,
  "name": "wix-ui-tpa",
  "version": "1.0.0",
  "description": "Components for Wix Tpa applications",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui-tpa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui-tpa.git"
  },
  "homepage": "https://github.com/wix/wix-ui-tpa#readme",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "scripts": {
    "compile-base-ui": "node ./.storybook/base-ui-compiler.js",
    "build": "yoshi build && import-path --path src/components --dts && npm run copy-styleable-ext",
    "pretest": "build-storybook && npm run compile-base-ui",
    "test": "npm run test:unit && npm run test:e2e",
    "posttest": "npm run lint",
    "test:watch": "yoshi test --jest --watch",
    "test:unit": "yoshi test --jest",
    "test:e2e": "yoshi test --protractor",
    "lint": "yoshi lint",
    "start": "yoshi start --no-test & npm run storybook",
    "release": "yoshi release && teamcity-surge-autorelease --dist=storybook-static",
    "storybook": "start-storybook -p 6006",
    "copy-styleable-ext": "cp src/tpaStyles/*.js dist/src/tpaStyles",
    "pr-release": "teamcity-surge-autorelease --dist=storybook-static"
  },
  "dependencies": {
    "wix-ui-core": "^1.0.0",
    "wix-ui-icons-common": "^1.0.23"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.3.13",
    "@storybook/react": "^3.3.13",
    "@types/jest": "^22.1.1",
    "@types/react": "^16.3.8",
    "@types/react-dom": "^16.0.5",
    "@types/storybook__react": "^3.0.5",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.0.5",
    "eyes.it": "^2.0.3",
    "gh-pages-auto-release": "latest",
    "identity-obj-proxy": "^3.0.0",
    "import-path": "latest",
    "node-sass-import-once": "^1.2.0",
    "prop-types": "^15.5.4",
    "raf": "^3.4.0",
    "react": "^16.3.1",
    "react-dom": "^16.3.1",
    "react-test-renderer": "^16.3.1",
    "stylable-integration": "latest",
    "ts-jest": "^22.0.3",
    "typescript": "^3.0.0",
    "wix-base-ui": "latest",
    "wix-storybook-utils": "^1.0.0",
    "wix-style-processor": "latest",
    "wix-ui-test-utils": "latest",
    "yoshi": "^1.2.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/enzyme-setup.js"
    ]
  },
  "optionalDependencies": {
    "teamcity-surge-autorelease": "^1.0.3"
  }
}
