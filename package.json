{
  "private": false,
  "name": "wix-ui-tpa",
  "version": "1.0.0",
  "description": "Components for Wix Tpa applications",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "scripts": {
    "build": "haste build && import-path --path src/components",
    "pretest": "npm run build && build-storybook",
    "test": "haste test --jest && haste test --protractor",
    "start": "haste start & npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006",
    "lint": "haste lint"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "color": "^2.0.1",
    "lodash": "^4.17.4",
    "wix-ui-core": "^1.0.0"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.2.13",
    "@storybook/react": "~3.1.0",
    "@storybook/storybook-deployer": "~2.0.0",
    "@types/color": "^2.0.0",
    "@types/jest": "^21.1.8",
    "@types/react": "^16.0.25",
    "@types/react-dom": "^16.0.3",
    "@types/storybook__react": "^3.0.5",
    "enzyme": "^2.3.0",
    "gh-pages-auto-release": "^1.1.2",
    "import-path": "^0.0.10",
    "prop-types": "^15.5.4",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "react-test-utils": "0.0.1",
    "ts-jest": "^21.2.4",
    "typescript": "^2.6.2",
    "wix-ui-test-utils": "^1.0.7",
    "haste-preset-yoshi": "latest",
    "haste-cli": "~0.1.16"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "yoshi": {
    "externals": {
      "react": "React",
      "Wix": "Wix"
    }
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/dist/src/jest-setup"
  },
  "haste": {
    "preset": "yoshi"
  }
}