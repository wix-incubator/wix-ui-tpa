{
  "private": false,
  "name": "wix-ui-tpa",
  "version": "1.0.0",
  "description": "Components for Wix Tpa applications",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui-tpa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui-tpa.git"
  },
  "homepage": "https://github.com/wix/wix-ui-tpa#readme",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "scripts": {
    "compile-base-ui": "node ./.storybook/base-ui-compiler.js",
    "build": "haste build && import-path --path src/components --dts && npm run copy-styleable-ext",
    "pretest": "haste lint && npm run build && build-storybook && npm run compile-base-ui",
    "test": "haste test --jest && haste test --protractor",
    "test:watch": "haste test --jest --watch",
    "start": "npm run clean && haste start & npm run compile-base-ui && npm run storybook",
    "release": "haste release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006 -s ./storybook-static",
    "clean": "rm -rf storybook-static",
    "copy-styleable-ext": "cp src/tpaStyles/*.js dist/src/tpaStyles"
  },
  "dependencies": {
    "wix-ui-core": "latest"
  },
  "devDependencies": {
    "@storybook/addon-options": "^3.3.13",
    "@storybook/react": "^3.3.13",
    "@types/jest": "^22.1.1",
    "@types/react": "^16.0.36",
    "@types/react-dom": "^16.0.3",
    "@types/storybook__react": "^3.0.5",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-15": "^1.0.5",
    "gh-pages-auto-release": "latest",
    "haste-preset-yoshi": "latest",
    "import-path": "latest",
    "node-sass-import-once": "^1.2.0",
    "prop-types": "^15.5.4",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "stylable": "latest",
    "stylable-integration": "latest",
    "ts-jest": "^22.0.3",
    "typescript": "^2.7.1",
    "wix-base-ui": "latest",
    "wix-storybook-utils": "latest",
    "wix-style-processor": "latest",
    "wix-ui-test-utils": "latest"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js",
      "\\.(css)$": "stylable-integration/jest"
    },
    "transformIgnorePatterns": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "setupFiles": [
      "<rootDir>/test/enzyme-setup.js"
    ]
  },
  "haste": {
    "preset": "yoshi"
  }
}
