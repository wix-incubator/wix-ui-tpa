{
  "private": false,
  "name": "wix-ui-tpa",
  "version": "1.0.0",
  "description": "Components for Wix Tpa applications",
  "author": {
    "name": "Wix",
    "email": "fed-infra@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui-tpa/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wix/wix-ui-tpa.git"
  },
  "homepage": "https://github.com/wix/wix-ui-tpa#readme",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "scripts": {
    "build": "npm run create-icons && yoshi build && npm run copy-styleable-ext && npm run compile-base-ui && npm run generate-stylable-index && npm run storybook:build",
    "postbuild": "import-path --path src/components --dts",
    "pr-postbuild": "npm install @wix/teamcity-surge-autorelease@^1.0.0 --no-save && teamcity-surge-autorelease",
    "test": "npm run test:unit && autotools-sanity && npm run test:e2e",
    "posttest": "npm run lint",
    "test:watch": "yoshi test --jest --watch",
    "test:unit": "yoshi test --jest",
    "test:e2e": "yoshi test --protractor",
    "lint": "yoshi lint --fix",
    "start": "npm run storybook",
    "release": "yoshi release",
    "postpublish": "npm install @wix/teamcity-surge-autorelease@^1.0.0 --no-save && teamcity-surge-autorelease",
    "storybook": "start-storybook -p 6006 -s ./src/assets",
    "copy-styleable-ext": "cp src/tpaStyles/*.js dist/src/tpaStyles",
    "compile-base-ui": "node ./.storybook/base-ui-compiler.js",
    "storybook:build": "build-storybook  -s ./src/assets",
    "generate-stylable-index": "stc --srcDir=\"./dist/src/components\" --diagnostics --indexFile=index.st.css",
    "generate": "wuf generate",
    "create-icons": "svg2react-icon src/icons/raw src/icons/dist true --named-export --typescript"
  },
  "dependencies": {
    "@stylable/dom-test-kit": "^0.1.0",
    "classnames": "^2.2.6",
    "lodash": "^4.17.11",
    "react-resize-detector": "^4.2.0",
    "wix-ui-core": "^2.0.158",
    "wix-ui-icons-common": "^2.0.46"
  },
  "devDependencies": {
    "@storybook/addon-links": "5.0.9",
    "@storybook/react": "5.0.9",
    "@types/enzyme": "^3.1.8",
    "@types/jest": "^23.0.0",
    "@types/lodash": "^4.14.134",
    "@types/react": "^16.8.19",
    "@types/react-dom": "^16.8.3",
    "@types/storybook__react": "^4.0.2",
    "@ui-autotools/registry": "^4.0.0",
    "@ui-autotools/sanity": "^2.8.2",
    "autoprefixer": "^9.6.0",
    "babel-cli": "^6.26.0",
    "core-js": "^2.6.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "eyes.it": "^2.0.3",
    "gh-pages-auto-release": "latest",
    "identity-obj-proxy": "^3.0.0",
    "import-path": "latest",
    "node-sass-import-once": "^1.2.0",
    "prop-types": "^15.5.4",
    "protractor": "^5.3.0",
    "raf": "^3.4.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "svg2react-icon": "^3.0.64",
    "ts-jest": "^22.0.3",
    "typescript": "^3.5.1",
    "wix-base-ui": "latest",
    "wix-storybook-utils": "^3.0.4",
    "wix-style-processor": "latest",
    "wix-ui-framework": "^1.2.1",
    "wix-ui-test-utils": "^1.0.0",
    "yoshi": "^3.28.0",
    "yoshi-style-dependencies": "^3.16.0"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "jest": {
    "transform": {
      "\\.(ts|tsx)$": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "moduleNameMapper": {
      "\\.(scss)$": "identity-obj-proxy"
    },
    "transformIgnorePatterns": [],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/",
      "<rootDir>/generator",
      "/src/.*\\.browser\\.spec\\.(ts|tsx)$"
    ],
    "testRegex": "/src/.*\\.spec\\.(ts|tsx)$",
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/jest-setup",
    "setupFiles": [
      "raf/polyfill",
      "<rootDir>/test/enzyme-setup"
    ]
  },
  "yoshi": {
    "exports": "wix-ui-tpa",
    "tpaStyle": true
  },
  "babel": {
    "presets": [
      "env"
    ]
  }
}
