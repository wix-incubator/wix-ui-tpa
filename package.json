{
  "private": false,
  "name": "wix-ui-tpa",
  "version": "1.0.0",
  "description": "Components for Wix Tpa applications",
  "author": {
    "name": "Lior Belinsky",
    "email": "liorbe@wix.com"
  },
  "bugs": {
    "url": "https://github.com/wix/wix-ui/issues"
  },
  "homepage": "https://github.com/wix/wix-ui#readme",
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "*.js",
    "!wallaby.js",
    "!protractor.conf.js"
  ],
  "scripts": {
    "build": "import-path --path src/components",
    "pretest": "yoshi build && build-storybook",
    "test": "yoshi test --jest && yoshi test --protractor",
    "posttest": "yoshi lint",
    "start": "yoshi start & npm run storybook",
    "release": "yoshi release && gh-pages-auto-release --dist=storybook-static",
    "storybook": "start-storybook -p 6006",
    "lint": "yoshi lint"
  },
  "peerDependencies": {
    "react": "^15.4.0"
  },
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-runtime": "^6.22.0",
    "lodash": "^4.17.4",
    "wix-ui-core": "^1.0.0"
  },
  "devDependencies": {
    "@storybook/addon-options": "3.2.13",
    "@storybook/react": "~3.1.0",
    "@storybook/storybook-deployer": "~2.0.0",
    "babel-jest": "^21.2.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-env": "^1.5.2",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-3": "^6.5.0",
    "enzyme": "^2.3.0",
    "eslint-plugin-babel": "^3.3.0",
    "eslint-plugin-react": "^6.8.0",
    "express": "^4.13.4",
    "gh-pages-auto-release": "^1.1.2",
    "identity-obj-proxy": "^3.0.0",
    "import-path": "0.0.10",
    "prop-types": "^15.5.4",
    "react": "^15.5.0",
    "react-dom": "^15.5.0",
    "react-test-renderer": "^15.5.4",
    "react-test-utils": "0.0.1",
    "wix-ui-test-utils": "^1.0.7",
    "yoshi": "latest"
  },
  "babel": {
    "presets": [
      [
        "es2015",
        {
          "modules": false
        }
      ],
      "react",
      "stage-2"
    ]
  },
  "eslintConfig": {
    "extends": "wix/react",
    "env": {
      "jest": true
    },
    "rules": {
      "react/jsx-handler-names": 0,
      "react/no-find-dom-node": 0,
      "react/no-string-refs": 0,
      "react/jsx-boolean-value": 2,
      "comma-dangle": [
        "error",
        "never"
      ]
    }
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "yoshi": {
    "entry": {
      "app": "index.js"
    },
    "externals": {
      "react": "React",
      "Wix": "Wix"
    }
  },
  "jest": {
    "setupFiles": [
      "<rootDir>/node_modules/babel-polyfill"
    ],
    "setupTestFrameworkScriptFile": "wix-ui-test-utils/dist/src/jest-setup",
    "moduleNameMapper": {
      "\\.(css|less|scss)$": "identity-obj-proxy"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/node_modules/"
    ]
  }
}
